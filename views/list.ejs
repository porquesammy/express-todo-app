<head>
    <meta charset="utf-8">
    <title>To Do List</title>
</head>

<body>
    <div class="box heading">
        <h1><%= kindOfDay %></h1>
    </div>
    <div class="box">
        <% for(let i = 0;i<newListItems.length;i++) { %>
        <div class="item">
            <input type="checkbox">
            <p class="h-paragraphs"> <%= newListItems[i] %> </p>
        </div>
        <% } %>
        <form class="item" action="/" method="POST">
            <input type="text" autofocus placeholder="new item" autocomplete="off" name="newItem" value="">
            <button type="submit" name="button">+</button>
        </form>
    </div>
</body>

</html>